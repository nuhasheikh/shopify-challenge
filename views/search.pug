doctype html
head
  title The Shoppies üèÜ 
  // CSS only
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0' crossorigin='anonymous')
  link(rel='stylesheet' href='style.css')
  // JavaScript Bundle with Popper
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8' crossorigin='anonymous')
  style
    include style.css

body(style="background-color: #F2F5F7;")
.container
  .row
    h2 The Shoppies
    #movieDisplay.col-sm-12
      .card
        .card-body
          h5.card-title Movie Title
          // Search Field
          link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
          form.example(action='/searchMovie' method='post')
            input(type='text' placeholder='Search..' name='movie')
            button(type='submit')
              i.fa.fa-search
          // End of Search Field
  .row
    #movieDisplay.col-sm-6
      .card
        .card-body
          h5.card-title Results for "!{search}"
          each movie in movies
            div
              form(action='/nominateMovie/'+movie.Title+"&"+movie.Year method='post')
                a !{movie.Title} (!{movie.Year})
                button(type='submit' style="margin: 5px 10px; border-radius: 4px; background-color: #FFFFFF; border: 2px solid lightgray;") Nominate
                br

    .col-sm-6
      .card
        .card-body
          h5.card-title Nominations
          each movie in nominees
            div
              form(action='/denominateMovie/'+movie.Title method='post')
                a !{movie.Title} (!{movie.Year})
                button(type='submit' style="margin: 5px 10px; border-radius: 4px; background-color: #FFFFFF; border: 2px solid lightgray;") Remove
                br

